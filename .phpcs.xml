<?xml version="1.0"?>
<ruleset name="PSR12 Standards">
    <description>PSR12 Standards Coding Standards</description>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/spec/*</exclude-pattern>
    <exclude-pattern>*/fixtures/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

<!--    <arg name="report" value="summary"/>-->
    <arg name="colors"/>
    <arg value="p"/>

    <ini name="memory_limit" value="128M"/>

    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.SpacingInsideBlock"/>
    </rule>
</ruleset>